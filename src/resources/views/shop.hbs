<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/">Trang chủ</a></li>
        <li class="breadcrumb-item active" aria-current="page">Cửa hàng</li>

    </ol>
</nav>
<div class="container">
    <div class="row">
        {{#each coffee}}
        <div class="col-12 col-sm-6 col-md-6 col-lg-4 .col-xl-3 margin shadow-lg p-3 mb-5 bg-white rounded">
            <div class="card" style="width: 19rem;">
                <img class="card-img-top" width="100%" height="350px" src="{{this.imageId}}" alt="Card image cap">
                <div class="card-body card-body-bg">
                    <h5 class="card-title text-truncate scriptFont text-light">{{this.name}}</h5>
                    <p class="card-text card-text-color">1 gói {{this.mass}} gam</p>
                    <a href="/coffee/detail/{{this._id}}" class="w-100 btn btn-detail-bg text-light">Chi tiết</a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>
<footer>

    <a class="order-btn" href="/">
        Trang chủ
    </a>

</footer>