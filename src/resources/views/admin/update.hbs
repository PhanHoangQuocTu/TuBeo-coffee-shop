<div class="container mt-4">
    <h3>Cập nhật sản phẩm</h3>
    <form class="mt-4" method="POST" action="/admin/{{coffee._id}}?_method=PUT" enctype="multipart/form-data">
        <div class="form-group">
            <label for="name">Tên coffee</label>
            <input value="{{coffee.name}}" name="name" type="text" class="form-control" id="name" aria-describedby="emailHelp"
                placeholder="Nhập tên sản phẩm">
        </div>
        <div class="form-group">
            <label for="description">Mô tả</label>
            <input value="{{coffee.description}}" name="description" type="text" class="form-control" id="description" aria-describedby="emailHelp"
                placeholder="Nhập mô tả sản phẩm">
        </div>
        <div class="form-group">
            <label for="country">Xuất xứ</label>
            <input value="{{coffee.country}}" name="country" type="text" class="form-control" id="country" aria-describedby="emailHelp"
                placeholder="Nhập mô tả sản phẩm">
        </div>
        <div class="form-group">
            <label for="mass">Khối lượng / 1 bịch</label>
            <input value="{{coffee.mass}}" name="mass" type="text" class="form-control" id="mass" aria-describedby="emailHelp"
                placeholder="Nhập khối lượng sản phẩm">
        </div>
        <div class="form-group">
            <label for="price">Giá bán</label>
            <input value="{{coffee.price}}" name="price" type="text" class="form-control" id="price" placeholder="Nhập giá bán">
        </div>
        <div class="form-group">
            <label for="imageId">Ảnh sản phẩm</label>
            <input name="imageId" type="file" class="form-control-file" id="imageId">
        </div>
        <button class="btn btn-secondary">
            <a href="/admin" class="btn-text">Trở lại</a>
        </button>
        <button type="submit" class="btn btn-primary">Cập nhật</button>
    </form>
</div>